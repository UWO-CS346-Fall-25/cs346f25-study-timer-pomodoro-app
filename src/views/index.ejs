<%- include('partials/head', { title }) %>
<body class="page-<%= pageId %>">
  <%- include('partials/header') %>

  <main class="container">
    <section class="hero">
      <h1>Design your focus flow for the week</h1>
      <p>
        FocusFlow helps you balance deep work and restorative breaks with a Pomodoro rhythm
        tailored to your study goals.
      </p>
      <div class="hero-actions">
        <a href="/focus" class="button primary">Explore the session layout</a>
        <a href="/insights" class="button primary">Preview progress insights</a>
      </div>
    </section>

    <section class="features">
      <h2>Why FocusFlow works</h2>
      <div class="feature-grid">
        <% featureCards.forEach((card) => { %>
          <article class="feature-card">
            <span class="feature-icon"><%= card.icon %></span>
            <h3><%= card.title %></h3>
            <p><%= card.description %></p>
          </article>
        <% }); %>
      </div>
    </section>

    <section class="workflow">
      <h2>The three-step study loop</h2>
      <ol class="workflow-steps">
        <% workflowSteps.forEach((step) => { %>
          <li>
            <h3><%= step.label %></h3>
            <p><%= step.details %></p>
          </li>
        <% }); %>
      </ol>
    </section>

    <section class="cta-panel">
      <div>
        <h2>Ready to map tomorrow&apos;s sprint?</h2>
        <p>Lineup of sessions now so you can start the timer later.</p>
      </div>
      <a href="/focus" class="button secondary">Open the planner</a>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
</html>

